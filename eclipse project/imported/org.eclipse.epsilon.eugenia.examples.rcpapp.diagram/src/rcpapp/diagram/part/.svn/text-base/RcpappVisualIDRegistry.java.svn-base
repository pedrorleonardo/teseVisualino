		}

		/**
		 * @generated
		 */
		@Override
		public boolean isSemanticLeafVisualID(int visualID) {
			return rcpapp.diagram.part.RcpappVisualIDRegistry
					.isSemanticLeafVisualID(visualID);
		}
	};

}
